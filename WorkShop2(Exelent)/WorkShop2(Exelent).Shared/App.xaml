<Application
    x:Class="WorkShop2_Exelent_.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorkShop2_Exelent_">


    <Application.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="DarkCyan"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox" x:Key="DefaultTextBoxStyle">
            <Setter Property="Background" Value="DarkGray"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>

        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource DefaultTextBoxStyle}"></Style>
        
        <Style TargetType="ListBoxItem" x:Key="DefaultTextBoxStyles">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="ListBoxItem" BasedOn="{StaticResource DefaultTextBoxStyles}"/>
    </Application.Resources>
    
</Application>
